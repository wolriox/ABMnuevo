<div class="container p-4">
    <div class="row">
        
            <div class="col-9">                
            
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Nombre/Empresa</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">
                            <div class="container" align="right">
                            <a href="/proveedores/add" class="btn btn-outline-success">
                            <i class="fa fa-plus"></i>
                            </a></div>
                        </th>
                    </tr>
                </thead>
                {{#each proveedores}}
                <tbody>
                <tr>
                    <td>{{idProveedor}}</td>
                    <td>{{nombreProveedor}}</td>
                    <td> {{pDireccion}} </td>
                    <td> {{pTelefono}} </td>
                    <td align="right">
                        <a href="/proveedores/eliminar/{{idProveedor}}" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                        <a href="/proveedores/editar/{{idProveedor}}" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i></a>        
                    </td>
                </tr>
                </tbody>
            
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay proveedores cargados.</p>
                    <a href="/proveedores/add">Crear proveedor</a>
                </div>
            </div>
        {{/each}}
        </table>
            </div>
    </div>
</div>
