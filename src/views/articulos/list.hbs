<div class="container p-4">
    <div class="row">
        
            <div class="col-9">                
            
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Grupo</th>
                        <th scope="col">Año</th>
                        <th scope="col">
                            <div class="container" align="right">
                            <a href="/articulos/add" class="btn btn-outline-success">
                            <i class="fa fa-plus"></i>
                            </a></div>
                        </th>
                    </tr>
                </thead>
                {{#each articulos}}
                <tbody>
                <tr>
                    <td>{{id}}</td>
                    <td>{{nombre}}</td>
                    <td> {{grupo}} </td>
                    <td> {{año}} </td>
                    <td align="right">
                        <a href="/articulos/eliminar/{{id}}" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                        <a href="/articulos/editar/{{id}}" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i></a>        
                    </td>
                </tr>
                </tbody>
            
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay artículos cargados.</p>
                    <a href="/articulos/add">Crear artículo</a>
                </div>
            </div>
        {{/each}}
        </table>
            </div>
    </div>
</div>
    
